{
  "name": "@parapetai/parapet",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "exports": {
    "./runtime/*": "./dist/runtime/*.js",
    "./config/*": "./dist/config/*.js",
    "./providers/*": "./dist/providers/*.js"
  },
  "scripts": {
    "build": "npm run -ws build",
    "start:runtime": "tsx apps/runtime/src/runtime/index.ts",
    "parapet": "npm --workspace @parapetai/runtime run cli --",
    "build:all": "npm run -ws build",
    "dev": "npm run -ws dev",
    "build:runtime:ws": "npm --workspace @parapetai/runtime run build",
    "compose:up": "docker compose up -d --build",
    "compose:down": "docker compose down",
    "compose:logs": "docker compose logs -f",
    "compose:ps": "docker compose ps"
  },
  "devDependencies": {
    "@types/node": "^22.18.13",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "fastify": "^5.6.1",
    "yaml": "^2.6.0"
  }
}
