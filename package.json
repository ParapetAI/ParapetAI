{
  "name": "@parapetai/parapetai",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "libs/*"
  ],
  "exports": {
    "./runtime/*": "./dist/runtime/*.js",
    "./config/*": "./dist/config/*.js",
    "./providers/*": "./dist/providers/*.js"
  },
  "scripts": {
    "build": "pnpm -r build",
    "start:runtime": "pnpm --filter @parapetai/runtime run dev",
    "build:runtime:ws": "pnpm --filter @parapetai/runtime run build",
    "compose:up": "docker compose up -d --build",
    "compose:down": "docker compose down",
    "compose:logs": "docker compose logs -f",
    "compose:ps": "docker compose ps",
    "script:openai-sdk-tester": "npx tsx .\\apps\\runtime\\scripts\\openai-sdk-tester.ts",
    "script:descrypt-bootstrap-state": "npx tsx .\\packages\\cli\\scripts\\descrypt-bootstrap-state.ts",
    "script:webhook-receiver": "npx tsx .\\apps\\runtime\\scripts\\webhook-receiver.ts",
    "parapet:build-config": "npx -y tsx packages/cli/src/main.ts build-config -o .env",
    "test:runtime": "pnpm --filter @parapetai/runtime run test",
    "start:landing-page": "pnpm --filter @parapetai/landing-page run dev",
    "docker:publish": "node ./scripts/docker-release.mjs",
    "docker:publishx": "node ./scripts/docker-release.mjs --multiarch",
    "release:patch": "pnpm version patch --no-git-tag-version && pnpm docker:publish",
    "release:minor": "pnpm version minor --no-git-tag-version && pnpm docker:publish",
    "release:major": "pnpm version major --no-git-tag-version && pnpm docker:publish",
    "cli:version:patch": "pnpm --filter @parapetai/cli run version:patch",
    "cli:version:minor": "pnpm --filter @parapetai/cli run version:minor",
    "cli:version:major": "pnpm --filter @parapetai/cli run version:major",
    "cli:release:patch": "pnpm --filter @parapetai/cli run version:patch && pnpm publish --filter @parapetai/cli --access public --no-git-checks",
    "cli:release:minor": "pnpm --filter @parapetai/cli run version:minor && pnpm publish --filter @parapetai/cli --access public --no-git-checks",
    "cli:release:major": "pnpm --filter @parapetai/cli run version:major && pnpm publish --filter @parapetai/cli --access public --no-git-checks",
    "config-core:version:patch": "pnpm --filter @parapetai/config-core run version:patch",
    "config-core:version:minor": "pnpm --filter @parapetai/config-core run version:minor",
    "config-core:version:major": "pnpm --filter @parapetai/config-core run version:major",
    "config-core:release:patch": "pnpm --filter @parapetai/config-core run version:patch && pnpm publish --filter @parapetai/config-core --access public --no-git-checks",
    "config-core:release:minor": "pnpm --filter @parapetai/config-core run version:minor && pnpm publish --filter @parapetai/config-core --access public --no-git-checks",
    "config-core:release:major": "pnpm --filter @parapetai/config-core run version:major && pnpm publish --filter @parapetai/config-core --access public --no-git-checks"
  },
  "devDependencies": {
    "@types/node": "^22.18.13",
    "openai": "^6.7.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "test-exclude": "^7.0.1"
    },
    "onlyBuiltDependencies": [
      "unrs-resolver"
    ]
  }
}
