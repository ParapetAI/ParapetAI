{
  "name": "@parapetai/cli",
  "version": "0.1.6",
  "description": "Command-line interface for building encrypted ParapetAI bootstrap configurations",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ParapetAI/ParapetAI.git"
  },
  "homepage": "https://github.com/ParapetAI/ParapetAI#readme",
  "bugs": {
    "url": "https://github.com/ParapetAI/ParapetAI/issues"
  },
  "private": false,
  "bin": {
    "parapetai": "./bin/parapetai"
  },
  "type": "commonjs",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node src/main.ts",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm build",
    "version:patch": "node ../../scripts/version-package.mjs packages/cli patch",
    "version:minor": "node ../../scripts/version-package.mjs packages/cli minor",
    "version:major": "node ../../scripts/version-package.mjs packages/cli major",
    "release:patch": "pnpm version:patch && pnpm publish --no-git-checks",
    "release:minor": "pnpm version:minor && pnpm publish --no-git-checks",
    "release:major": "pnpm version:major && pnpm publish --no-git-checks"
  },
  "dependencies": {
    "@parapetai/config-core": "^0.1.9",
    "commander": "^11.1.0",
    "inquirer": "^9.2.15"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/inquirer": "^9.0.7",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
